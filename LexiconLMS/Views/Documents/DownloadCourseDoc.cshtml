    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row custom-file">
        @foreach (var file in Model.fileList)
        {
            TempData["fil"] = @file;
            <li id="customFile" name="file"><a onclick="this.closest('form').submit();return false;" href="@file">@file</a></li>
        }
    </div>
</form>

