@model DownloadCourseDocumentViewModel

@{
    ViewData["Title"] = "Download course document";
}

<h1>@ViewData["Title"]</h1>

<h4>Document for @Model.Course.Name</h4>
<hr />

<div class="row custom-file">
        
    @foreach (var doc in Model.DocumentList)
    {
    <li>
        @*<a href="@Model.CurrentDirectory/@doc.FilePath">@doc.FilePath</a>*@
        <a href="@doc.FilePath">@doc.FilePath</a>

    </li>
        
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
