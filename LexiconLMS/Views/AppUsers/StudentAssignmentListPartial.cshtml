@model IEnumerable<AssignmentListViewModel>

<h2>Assignments</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFinished)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Activities" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td id="ass-finished">
                    @if (item.IsFinished)
                    {
                    <i class="material-icons checkbox-ass">check_box_outline_blank</i>
                        //TODO switch icons
                    }
                    else
                    {
                        <i class="material-icons checkbox-ass">check_box</i>
                        //TODO switch icons
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


