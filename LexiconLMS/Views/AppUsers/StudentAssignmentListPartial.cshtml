@model IEnumerable<AssignmentListViewModel>

<h2>Assignments</h2>

<div id="assig-header-row" class="row">
    <div class="col-sm-4">
        @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="col-sm-3">
        @Html.DisplayNameFor(model => model.StartTime)
    </div>
    <div class="col-sm-3">
        @Html.DisplayNameFor(model => model.EndTime)
    </div>
    <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.IsFinished)
    </div>
</div>
@foreach (var item in Model)
{
<div class="row">
    <div class="col-sm-4">
        <a asp-controller="Activities" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
    </div>
    <div class="col-sm-3">
        @Html.DisplayFor(modelItem => item.StartTime)
    </div>
    <div class="col-sm-3">
        @Html.DisplayFor(modelItem => item.EndTime)
    </div>
    <div id="ass-finished" class="col-sm-2">
            @if (item.IsFinished)
            {
                <i class="material-icons checkbox-ass">check_box_outline_blank</i>
                //TODO switch icons
            }
            else
            {
                <i class="material-icons checkbox-ass">check_box</i>
                //TODO switch icons
            }
    </div>  
</div>
}



