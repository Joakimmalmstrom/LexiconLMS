@model IEnumerable<ActivityListViewModel>

<h2>Activities</h2>

<div id="activity-header-row" class="row">
    <div class="col-sm-3">
        @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="col-sm-3">
        @Html.DisplayNameFor(model => model.StartTime)
    </div>
    <div class="col-sm-3">
        @Html.DisplayNameFor(model => model.EndTime)
    </div>
    <div class="col-sm-3">
        @Html.DisplayNameFor(model => model.ActivityType)
    </div>
</div>

@foreach (var item in Model)
{
    <!--Edit/Details etc-->
<div class="row">
    <div class="col-sm-3">
        <a asp-controller="Activities" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
    </div>
    <div class="col-sm-3">
        @Html.DisplayFor(modelItem => item.StartTime)
    </div>
    <div class="col-sm-3">
        @Html.DisplayFor(modelItem => item.EndTime)
    </div>
    <div class="col-sm-3">
        @Html.DisplayFor(modelItem => item.ActivityType)
    </div>
    <div>
        <a asp-controller="Documents" asp-action="UploadActivityDoc" asp-route-id="@item.Id">Upload</a> |
        <a asp-controller="Activities" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-controller="Activities" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </div>
</div>
}