@model IEnumerable<ModuleListViewModel>

<h2>Modules</h2>

@foreach (var item in Model)
{
<div class="row">
    <div class="col-sm-8">
        <a asp-action="GetActListAjax" asp-route-id="@item.Id"
           data-ajax="true"
           data-ajax-method="GET"
           data-ajax-update="div#cont-modules-and-activities"
           data-ajax-mode="replace-with">
            @if (item.IsCurrentModule)
            {
                <div type="button" class="btn btn-success btn-module">
                    @item.Name
                </div>
            }
            else
            {
                <div type="button" class="btn btn-dark btn-module">
                    @item.Name
                </div>
            }
        </a>
    </div>
    <div class="col-sm-2">
        <a asp-controller="Documents" asp-action="DownloadModuleDoc" asp-route-id="@item.Id">
            <img id="download-module-doc-icon" class="icon-img" src="~/icons/share.svg" style="transform: rotate(180deg);" />
        </a>
    </div>
    <div class="col-sm-2">
        <a asp-controller="Modules" asp-action="Details" asp-route-id="@item.Id">
            <img id="add-module-icon" class="icon-img" src="~/icons/info_black.svg" />
        </a>
    </div>
</div>
}