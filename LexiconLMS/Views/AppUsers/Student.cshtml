<div class="container" id="current">
    <h2>@Model.Course.Name</h2>


    <div class="row">
        <div class="col-sm-6">
            <div id="card-mod-act" class="card">
                <div class="card-body">
                    <h5>Current module</h5>
                    <p class="card-text">Current module... <a href="#"><i class="material-icons">chevron_right</i></a></p>
                    <h5>Current activity</h5>
                    <p class="card-text">Current activity...  <a href="#"><i class="material-icons">chevron_right</i></a></p>
