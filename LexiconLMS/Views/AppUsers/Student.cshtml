@model LexiconLMS.Models.Entities.AppUser

@{
    ViewData["Title"] = "Student";
}

<h2>@Html.DisplayFor(modelItem => Model.FirstName) @Html.DisplayFor(modelItem => Model.LastName)</h2>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<div class="container" id="current">
    <div class="row">
        <div class="col-sm-12">
            <h2>@Model.Course.Name</h2>
        </div>
    </div>

    <div class="row" >
        
        <div class="col-sm-5">
            <div id="card-mod-act" class="card">
                <div class="card-body">
                    
                    @if (@Model.Course.Modules.Count() > 0)
                    {
                        <h5>Current module</h5>
                        <p class="card-text"><a href="#">@Model.Course.Modules.First().Name<i class="material-icons">chevron_right</i></a></p>
                    }

                    @if (@Model.Course.Modules.First().Activities.Count() > 0)
                    {
                        <h5>Current activity</h5>
                        <p class="card-text">@Model.Course.Modules.First().Activities.First().Name<a href="#"><i class="material-icons">chevron_right</i></a></p>
                    }

                </div>
            </div>
        </div>
        <div class="col-sm-7">
            <div id="card-hand-ins" class="card">
                <div class="card-body">
                    <h5 class="card-title">Upcoming assignments</h5>
                    <div class="row" id="ass-head-row">
                        <div class="col col-sm-4"></div>
                        <div class="col col-sm-4">Due date</div>
                        <div class="col ass-col col-sm-4">Finished</div>
                    </div>
                    <div class="row">
                        <div class="col col-sm-4"><a href="#">Assignment 1</a></div>
                        <div class="col col-sm-4">2020-12-01</div>
                        <div class="col ass-col col-sm-4"><input type="checkbox" class="form-check-input" id="check-ass-1"></div>
                    </div>
                    <div class="row">
                        <div class="col col-sm-4"><a href="#">Assignment 2</a></div>
                        <div class="col col-sm-4">2020-12-01</div>
                        <div class="col ass-col col-sm-4"><input type="checkbox" class="form-check-input" id="check-ass-2"></div>
                    </div>
                    <div class="row">
                        <div class="col col-sm-4"><a href="#">Assignment 3</a></div>
                        <div class="col col-sm-4">2020-12-01</div>
                        <div class="col ass-col col-sm-4"><input type="checkbox" class="form-check-input" id="check-ass-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container" id="modules">
    <div class="row row-modules">
        <div class="col-sm-12">
            <h2>Modules</h2>
        </div>
    </div>
</div>

