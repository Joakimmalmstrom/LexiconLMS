@model IEnumerable<Course>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Teacher" asp-controller="AppUsers" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>

            <td>
                <a asp-controller="Courses" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Courses" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>

        </tr>
        }
    </tbody>
</table>
